# Admin service location blocks
# Serve static files from /var/www/html
location / {
    root /var/www/html;
    try_files $uri $uri/ =404;
}

# Common proxy settings for Flask app
location ~ ^/(api/|status|static/) {
    proxy_pass http://127.0.0.1:12723;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}

location /ubuntu/ {
    alias /var/lib/tftpboot/ubuntu/;
    autoindex on;
}

location ~ ^/autoinstall/(user-data|meta-data)$ {
    proxy_pass http://127.0.0.1:12723$request_uri;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}

location /autoinstall/ {
    alias /var/www/html/autoinstall/;
    autoindex on;
}

location /assets/ {
    alias /var/www/html/assets/;
    expires 1y;
    add_header Cache-Control "public, immutable";
}

# Grafana dashboard (read-only)
location /grafana/ {
    proxy_pass http://localhost:3030/grafana/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    
    # Prevent redirect loops
    proxy_redirect http://localhost:3030/grafana/ /grafana/;
    proxy_redirect http://localhost:3030/ /grafana/;
    
    # Allow embedding and remove edit capabilities
    proxy_hide_header X-Frame-Options;
    add_header X-Frame-Options SAMEORIGIN;
    
    # WebSocket support for live updates
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
}

