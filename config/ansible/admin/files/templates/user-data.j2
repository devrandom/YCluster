#cloud-config
# Node type: {{ node_type }}
# Cluster interface: {{ cluster_interface }}
# AMT interface: {{ amt_interface }}
# Uplink interface: {{ uplink_interface }}
autoinstall:
  version: 1
  early-commands:
    # Sync time from HTTP server (apt rejects future-dated release files)
    - date -s "$(curl -sI http://10.0.0.254/ | grep -i '^date:' | cut -d' ' -f2-)" || true
  identity:
    hostname: {{ hostname }}
    username: ubuntu
    password: '{{ ubuntu_password }}'
  network:
    version: 2
    ethernets:
      primary:
        match:
          name: "{{ cluster_interface }}"
        dhcp4: false
        addresses: [{{ ip_address }}/24]
        optional: true
{% if amt_interface %}
      amt:
        match:
          name: "{{ amt_interface }}"
        optional: true
        addresses:
          - "{{ amt_ip_address }}/24"
{% endif %}
{% if uplink_interface %}
      uplink:
        match:
          name: "{{ uplink_interface }}"
        optional: true
        dhcp4: true
{% endif %}
  ssh:
    install-server: true
    authorized-keys:
      - "{{ ssh_key_content | default('ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIE1pS94ylBxptsLlfhOcVs6qwicSZhFFqee+3xkN98cv dev@desk1') }}"
    allow-pw: true
{% if proxy_url %}
  proxy: "{{ proxy_url }}"
  apt:
    preserve_sources_list: false
    primary:
      - arches: [amd64]
        uri: http://archive.ubuntu.com/ubuntu
    proxy: "{{ proxy_url }}"
{% endif %}
  kernel:
    package: linux-generic
  snaps:
    - name: microceph
  storage:
    config:
      - type: disk
        id: disk0
        match:
          size: largest
        ptable: gpt
        wipe: superblock
      - type: partition
        id: efi-partition
        device: disk0
        offset: 1048576
        size: 512M
        flag: boot
        grub_device: true
      - type: partition
        id: boot-partition
        device: disk0
        size: 4G
      - type: partition
        id: lvm-partition
        device: disk0
        size: -1
        flag: lvm
      - type: lvm_volgroup
        id: vg0
        name: vg0
        devices:
          - lvm-partition
      - type: lvm_partition
        id: root-lv
        name: root
        volgroup: vg0
        size: 200G
      - type: lvm_partition
        id: ceph-lv
        name: ceph
        volgroup: vg0
        size: 1000G
      - type: format
        id: efi-fs
        volume: efi-partition
        fstype: fat32
      - type: format
        id: boot-fs
        volume: boot-partition
        fstype: ext4
      - type: format
        id: root-fs
        volume: root-lv
        fstype: ext4
      - type: mount
        id: efi-mount
        device: efi-fs
        path: /boot/efi
      - type: mount
        id: boot-mount
        device: boot-fs
        path: /boot
      - type: mount
        id: root-mount
        device: root-fs
        path: /
  packages:
    - snapd
    - curl
  late-commands:
    # Install HWE kernel for newer hardware (RTL8125, etc)
    - curtin in-target -- apt-get update
    - curtin in-target -- apt-get install -y linux-generic-hwe-24.04
    # Configure grub command line
    - sed -i 's/^GRUB_CMDLINE_LINUX=".*"/GRUB_CMDLINE_LINUX="text video=HDMI-A-1:1024x768@60e"/' /target/etc/default/grub
    - curtin in-target -- update-grub
    # Configure proxy hostname resolution
    - |
      cat >> /target/etc/hosts << 'EOF'
      10.0.0.1 proxy.xc
      10.0.0.254 proxy.xc
      EOF
    # Configure proxy environment variables
    - |
      cat >> /target/etc/environment << 'EOF'
      http_proxy=http://proxy.xc:3128
      https_proxy=http://proxy.xc:3128
      no_proxy=localhost,127.0.0.1,10.0.0.0/24,10.10.10.0/24
      EOF
    # Configure apt proxy
    - |
      cat > /target/etc/apt/apt.conf.d/01proxy << 'EOF'
      Acquire::http::Proxy "http://proxy.xc:3128";
      Acquire::https::Proxy "http://proxy.xc:3128";
      EOF
    # Add ansible key to root authorized_keys
    - |
      mkdir -p /target/root/.ssh
      echo "{{ ssh_key_content | default('ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIE1pS94ylBxptsLlfhOcVs6qwicSZhFFqee+3xkN98cv dev@desk1') }}" >> /target/root/.ssh/authorized_keys
      chmod 700 /target/root/.ssh
      chmod 600 /target/root/.ssh/authorized_keys
      chown -R root:root /target/root/.ssh
