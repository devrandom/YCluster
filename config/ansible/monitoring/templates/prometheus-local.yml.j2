# Prometheus configuration for YCluster local monitoring
global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: 'ycluster'

rule_files:
  - "/etc/prometheus/rules/ycluster-alerts*.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - localhost:9093
{% for host in groups['core'] %}
{% if host != inventory_hostname %}
          - {{ hostvars[host]['ansible_host'] }}:9093
{% endif %}
{% endfor %}

scrape_configs:
  # Scrape Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          node: '{{ ansible_hostname }}'

  # Scrape node exporter on all core nodes
  - job_name: 'node-exporter'
    static_configs:
{% for host in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:9100']
        labels:
          node: '{{ host }}'
          node_type: 'core'
{% endfor %}
{% if groups['storage'] is defined %}
{% for host in groups['storage'] %}
{% if host not in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:9100']
        labels:
          node: '{{ host }}'
          node_type: 'storage'
{% endif %}
{% endfor %}
{% endif %}

  # Scrape YCluster health APIs
  - job_name: 'ycluster-health'
    metrics_path: '/metrics'
    static_configs:
{% for host in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:12723']
        labels:
          node: '{{ host }}'
          node_type: 'core'
{% endfor %}
{% if groups['storage'] is defined %}
{% for host in groups['storage'] %}
{% if host not in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:12723']
        labels:
          node: '{{ host }}'
          node_type: 'storage'
{% endif %}
{% endfor %}
{% endif %}

  # Scrape DHCP health endpoint
  - job_name: 'ycluster-dhcp'
    metrics_path: '/metrics'
    static_configs:
{% for host in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:8067']
        labels:
          node: '{{ host }}'
{% endfor %}

