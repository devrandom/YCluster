# Central Prometheus configuration for long-term storage
global:
  scrape_interval: 30s
  evaluation_interval: 30s
  external_labels:
    cluster: 'ycluster'
    prometheus: 'central'

rule_files:
  - "/etc/prometheus/rules/ycluster-federated-alerts.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets:
{% for host in groups['core'] %}
          - {{ hostvars[host]['ansible_host'] }}:9093
{% endfor %}

scrape_configs:
  # Federation from local Prometheus instances
  - job_name: 'prometheus-federation'
    scrape_interval: 30s
    honor_labels: true
    metrics_path: '/federate'
    params:
      'match[]':
        - '{__name__=~"node_(load1|load5|load15|memory_.*|disk_.*|network_.*|filesystem_.*)"}'
        - '{__name__=~"up|prometheus_.*|ycluster_.*"}'
        - 'prometheus_tsdb_head_samples_appended_total'
        - 'prometheus_tsdb_compaction_duration_seconds'
        - 'prometheus_http_requests_total'
        - '{job=~"ycluster-.*"}'
        - '{__name__=~"ceph_cluster_.*"}'
        - '{__name__=~"ceph_health_.*"}'
        - '{__name__=~"ceph_mon_.*"}'
        - '{__name__=~"ceph_osd_.*"}'
        - '{__name__=~"ceph_pool_.*"}'
        - '{__name__=~"ceph_pg_.*"}'
        - '{__name__=~"ceph_rbd_.*"}'
        - '{__name__=~"ceph_mgr_.*"}'
    static_configs:
{% for host in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:9090']
        labels:
          federated_from: '{{ host }}'
{% endfor %}

  # Direct scraping of critical services (backup)
  - job_name: 'ycluster-health-central'
    metrics_path: '/metrics'
    scrape_interval: 60s
    static_configs:
{% for host in groups['core'] %}
      - targets: ['{{ hostvars[host]['ansible_host'] }}:12723']
        labels:
          node: '{{ host }}'
          node_type: 'core'
{% endfor %}
